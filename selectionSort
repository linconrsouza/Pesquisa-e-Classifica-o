void selectionSort(int *v, int tam){
  int menor=100000;
  for(size_t i=0; i<tam; i++){
    for(size_t i = 0; i<tam-1; i++){
      if (v[i]<menor){
        menor = v[i];
      }  
    }
  }
}


 int main(){

   int vetor[10]={5,6,3,4,8,11,36,88,55,12};
   selectionSort(vetor, 10);



   for(size_t i=0; i<10; i++){
     printf("%i \n", vetor[i]);
   }

  return 0;
 }
